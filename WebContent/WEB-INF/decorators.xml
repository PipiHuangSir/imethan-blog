<?xml version="1.0" encoding="UTF-8"?>
<!-- 默认目录 -->
<decorators defaultdir="/WEB-INF/content/base/decorators">

	<!-- 排除装饰页面 -->
	<excludes>
		<pattern>/console/cms/*/noDecorate/*</pattern>
		<pattern>/console/cms/*/noDecorate/*</pattern>
		<pattern>/portal</pattern>
		<pattern>/birthday</pattern>
	</excludes>

	<!-- 后台菜单装饰页 -->
	<decorator name="console" page="console/default.jsp">
		<pattern>/console/*</pattern>
	</decorator>
	
	<!-- 前台菜单装饰页 -->
	<decorator name="front" page="front/default.jsp">
		<pattern>/*</pattern>
	</decorator>

	<!-- 只装饰一个页面也可用这种方式定义 <decorator name="panel" page="panel.jsp"/> -->

	<!-- 装饰velocity模板 <decorator name="velocity" page="velocity.vm"> <pattern>/velocity.html</pattern> 
		</decorator> -->

	<!-- 装饰freeMarker模板 <decorator name="freemarker" page="freemarker.ftl"> 
		<pattern>/freemarker.html</pattern> </decorator> -->
</decorators>